{
  "name": "backend",
  "version": "0.1.0",
  "bin": {
    "backend": "bin/backend.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "dev:synth": "cross-env STAGE=dev cdk synth --profile bo",
    "dev:deploy": "cross-env STAGE=dev cdk deploy --profile bo",
    "dev": "npm run dev:synth --profile bo && npm run dev:deploy --profile bo",
    "prod:synth": "cross-env STAGE=prod cdk synth --profile bo",
    "prod:deploy": "cross-env STAGE=prod cdk deploy --profile bo",
    "prod": "npm run prod:synth --profile bo && npm run prod:deploy --profile bo"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.131",
    "@types/jest": "^29.5.8",
    "@types/node": "20.9.1",
    "aws-cdk": "2.113.0",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "~5.2.2"
  },
  "dependencies": {
    "@aws-sdk/client-apigatewaymanagementapi": "^3.485.0",
    "aws-cdk-lib": "2.113.0",
    "aws-lambda": "^1.0.7",
    "constructs": "^10.0.0",
    "source-map-support": "^0.5.21"
  }
}